<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="11dp"
    android:orientation="vertical"
    tools:context=".SelectorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <Button
            android:id="@+id/jsonToExcel"
            android:layout_width="wrap_content"
            android:paddingStart="77dp"
            android:paddingEnd="77dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="3dp"
            android:background="@drawable/bg_button_transparent"
            android:textSize="14sp"
            android:textColor="@color/purple_200"
            android:text="@string/json_to_excel"
            android:onClick="goJsonToExcel"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/excelToJson"
            android:layout_width="wrap_content"
            android:paddingStart="77dp"
            android:paddingEnd="77dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="3dp"
            android:background="@drawable/bg_button_transparent"
            android:textSize="14sp"
            android:textColor="@color/purple_200"
            android:text="@string/excel_to_json"
            android:onClick="goExcelToJson"
            tools:ignore="UsingOnClickInXml" />
    </LinearLayout>

</LinearLayout>